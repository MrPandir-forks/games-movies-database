datasource db {
  provider = "postgresql"
  url      = env("DATASOURCE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Record {
  id      Int            @id @default(autoincrement())
  title   String
  user    String
  status  PrismaStatuses
  genre   PrismaGenres
  grade   PrismaGrades?
}

enum PrismaStatuses {
  QUEUE
  DONE
  PROGRESS
  NOTFINISHED
  DROP
}

enum PrismaGenres {
  GAME
  ANIME
  MOVIE
  CARTOON
  SERIES
}

enum PrismaGrades {
  RECOMMEND
  LIKE
  BEER
  DISLIKE
  NOTGRADED
}
