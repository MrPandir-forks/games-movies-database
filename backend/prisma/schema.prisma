datasource db {
  provider = "postgresql"
  url      = env("DATASOURCE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id       Int             @id @default(autoincrement())
  title    String?         @unique
  personId Int?
  person   Person?         @relation(fields: [personId], references: [id])
  type     PrismaTypes?    @default(FREE)
  status   PrismaStatuses? @default(QUEUE)
  grade    PrismaGrades?

  @@map("games")
}

model Video {
  id       Int             @id @default(autoincrement())
  title    String?         @unique
  personId Int?
  person   Person?         @relation(fields: [personId], references: [id])
  type     PrismaTypes?    @default(FREE)
  status   PrismaStatuses? @default(QUEUE)
  genre    PrismaGenres?
  grade    PrismaGrades?

  @@map("videos")
}

model Person {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  color        String  @default("#333333")
  RecordGames  Game[]
  RecordMovies Video[]

  @@map("persons")
}

model User {
  id       Int         @id @default(autoincrement())
  login    String      @unique
  twitchId String      @unique
  role     PrismaRoles @default(USER)

  @@map("users")
}

enum PrismaRoles {
  ADMIN
  USER
}

enum PrismaTypes {
  PAID
  FREE
}

enum PrismaStatuses {
  QUEUE
  DONE
  PROGRESS
  UNFINISHED
  DROP
}

enum PrismaGenres {
  ANIME
  MOVIE
  CARTOON
  SERIES
}

enum PrismaGrades {
  RECOMMEND
  LIKE
  BEER
  DISLIKE
}
